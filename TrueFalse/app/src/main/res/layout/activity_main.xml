<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="vertical"
        tools:context=".MainActivity">
    <TextView
            android:text="TextView"
            android:textAlignment="center"
            android:paddingBottom="50dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/question_text"/>
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:gravity="center"
                  android:orientation="horizontal">
        <Button
                android:text="@string/button_true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/true_button"/>
        <Button
                android:text="@string/button_false"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/false_button"/>
    </LinearLayout>
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:gravity="center"
                  android:orientation="horizontal">
        <Button
                android:text="@string/button_prev"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/prev_button"/>
        <Button
                android:text="@string/button_next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/next_button"/>
    </LinearLayout>
</LinearLayout>